---
import { projects } from '@cv'

import Section from '@/components/Section.astro'
---

<Section title="Proyectos">
    <ul>
        {
            projects.map(({ url, description, highlights, name, isActive}) => {
                return (
                    <li>
                        <article>
                            <header>
                                <h3>
                                    <a href={url} title={`Ver el proyecto ${name}`} target="_blank" rel="noopener noreferrer">
                                        {name}
                                    </a>
                                    {
                                        isActive && (
                                            <span>&bull;</span>
                                        )
                                    }
                                </h3>
                                <p>{description}</p>
                                {url && (
                                    <p>
                                        <a href={url} title={`Ver el proyecto ${name}`} target="_blank" rel="noopener noreferrer">
                                            {url}
                                        </a>
                                    </p>
                                )}
                            </header>
                            <footer>
                                    {highlights.map(highlight => (
                                        <span>{highlight}</span>
                                    ))}
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(
            auto-fit,
            minmax(250px, 1fr)
        );
        gap: 1rem;
    }

    article {
        border-radius: 8px;
        border: 2px solid #d5d5d5;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
        background-color: #ddd;
    }

    article header {
        flex: 1;
    }

    article h3 {
        margin-bottom: 4px;
    }

    article a {
        color: #222;
    }

    article a:hover {
        text-decoration: underline;
    }

    article p {
        font-size: 0.75rem;
        line-height: 1.2rem;
        margin-bottom: 4px;
    }

    article h3 span {
        color: #6cbb3c;
    }

    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        font-size: 0.6rem;
    }

    footer span {
        border-radius: 6px;
        padding: 0.2rem 0.4rem;
        font-size: 0.6rem;
        font-weight: 500;
        color: #000;
        background-color: #eee;
    }
</style>