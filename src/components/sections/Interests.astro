---
import { interests } from '@cv'

import Section from '@/components/Section.astro'
---

<Section title="Intereses">
    <ul class="interests">
        {interests.map(({ name, keywords }) => (
            <li class="interest-card">
                <span>{name}</span>
                {keywords && keywords.length > 0 && (
                    <ul class="keywords">
                        {keywords.map((keyword) => (
                            <li class="keyword">{keyword}</li>
                        ))}
                    </ul>
                )}
            </li>
        ))}
    </ul>
</Section>

<style>
    .interests {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        padding-left: 8px;
        margin: 0;
        list-style: none;
    }

    .interest-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        background: #f5f5f5;
        border: 2px solid #999;
        border-radius: 12px;
        padding: 10px 14px;
        min-width: 120px;
        box-shadow: 1px 1px 0 #666;
    }

    span {
        font-weight: 600;
        font-family: cursive;
        margin-bottom: 8px;
    }

    .keywords {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .keyword {
    background: #fff;
    border: 1px solid #666;
    border-radius: 8px;
    padding: 4px 8px;
    font-family: cursive;
    font-size: 0.85rem;
    text-align: center;
  }
</style>